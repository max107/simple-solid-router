{
    "compilerOptions": {
        "target": "es5",
        "lib": [
            "ES2020",
            "DOM",
            "DOM.Iterable"
        ],
        "module": "commonjs",
        "declaration": true,
        "esModuleInterop": true,
        "outDir": "dist",
        "jsx": "preserve",
        "jsxImportSource": "solid-js",
        /* Linting */
        "strict": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "noFallthroughCasesInSwitch": true
    },
    "include": [
        "."
    ]
}